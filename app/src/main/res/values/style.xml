<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="background1">
        <item name="android:background">#0096ff</item>
    </style>
    <style name="background2">
        <item name="android:background">#0a63d6</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="title1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#1143b8</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#1143b8</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="titleback1">
        <item name="android:background">#1143b8</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="titleback2">
        <item name="android:background">#1143b8</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="listitem">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>